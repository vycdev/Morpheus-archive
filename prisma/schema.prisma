// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Guilds {
    // Primary key
    guild_id String    @id
    // Data
    prefix   String    @default("m!")
    // Relations
    quotes   Quotes[]
    usersxp  UsersXp[]
    Motds    Motds[]
}

model Users {
    // id               Int      @id @default(autoincrement())
    // Primary key
    user_id     String    @id
    // Data
    user_tag    String // Needs to be updated from time to time, so its easier to find users in the database table.
    description String?
    // Relations
    quotes      Quotes[]
    usersxp     UsersXp[]
    Motds       Motds[]
}

model UsersXp {
    // Primary key
    id               Int      @id @default(autoincrement())
    // Data
    balance          Int      @default(0)
    lastxpclaim      DateTime @default(now())
    levelup_messages Boolean  @default(true)
    // Foreign keys
    usersUser_id     String
    guildsGuild_id   String
    Users            Users    @relation(fields: [usersUser_id], references: [user_id])
    Guilds           Guilds   @relation(fields: [guildsGuild_id], references: [guild_id])
    // Relations
    XpDays           XpDays[] // determine the level based on total xp, determine the total xp based on xpdays
}

model XpDays {
    // Primary key
    id           Int      @id @default(autoincrement())
    // Data
    day          DateTime @default(now())
    xp           Int      @default(0)
    timesClaimed Int      @default(0)
    lastClaimed  DateTime @default(now())

    // Foreign keys
    UsersXp   UsersXp @relation(fields: [usersXpId], references: [id])
    usersXpId Int
}

model Quotes {
    // Primary key
    id            Int    @id @default(autoincrement())
    // Data
    quote         String
    // Foreign keys
    guildGuild_id String
    userUser_id   String
    Guild         Guilds @relation(fields: [guildGuild_id], references: [guild_id])
    User          Users  @relation(fields: [userUser_id], references: [user_id])
}

model Motds {
    // Primary key
    id            Int    @id @default(autoincrement())
    // Data
    motd          String
    // Foreign keys
    guildGuild_id String
    userUser_id   String
    Guild         Guilds @relation(fields: [guildGuild_id], references: [guild_id])
    User          Users  @relation(fields: [userUser_id], references: [user_id])
}
